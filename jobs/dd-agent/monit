  with pidfile /var/vcap/sys/run/dd-agent/dogstatsd.pid
  start program "/var/vcap/jobs/dd-agent/bin/dogstatsd_ctl start"
  stop program "/var/vcap/jobs/dd-agent/bin/dogstatsd_ctl stop"
  group vcap
<% end %>

