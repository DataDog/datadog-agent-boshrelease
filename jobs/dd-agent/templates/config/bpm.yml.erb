processes:
  - name: datadog-agent
    workdir: /var/vcap/jobs/dd-agent
    executable: "/var/vcap/jobs/dd-agent/bin/agent_ctl"
    args:
      - start
    additional_volumes:
      - path: /var/vcap/data/garden
    
<% if p('dd.process_agent_enabled', false) == true || p('dd.process_agent_enabled', false).to_s =~ (/(true|t|yes|y|1)$/i) %>
  - name: dd-agent-process-agent
    workdir: /var/vcap/jobs/dd-agent
    executable: "/var/vcap/jobs/dd-agent/bin/process_agent_ctl"
    args:
      - start
    additional_volumes:
      - path: /var/vcap/data/garden
<% end %>

<% if p('dd.trace_agent_enabled', false) == true || p('dd.trace_agent_enabled', false).to_s =~ (/(true|t|yes|y|1)$/i) %>
  - name: dd-agent-trace-agent
    workdir: /var/vcap/jobs/dd-agent
    executable: "/var/vcap/jobs/dd-agent/bin/trace_agent_ctl"
    args:
      - start
    additional_volumes:
      - path: /var/vcap/data/garden
      
<% end %>

<% if p('dd.system_probe_enabled', false) == true || p('dd.system_probe_enabled', false).to_s =~ (/(true|t|yes|y|1)$/i) %>
  - name: dd-agent-system-probe
    executable: "/var/vcap/jobs/dd-agent/bin/system_probe_ctl"
    args:
      - start
    additional_volumes:
      - path: /var/vcap/data/garden
    unsafe:
      privileged: true
<% end %>
